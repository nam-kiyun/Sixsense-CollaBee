    							<xf:label></xf:label>
    						</xf:output>
    						<xf:secret style="height:35px;width:89.68%;background:transparent;outline:none;border:none;" id="password_input" ev:onblur="scwin.input_onblur" ev:onfocus="scwin.input_onfocus" class="input-group-container" placeholder="비밀번호를 입력하세요"></xf:secret>
    					</xf:group>
